{% extends "layout.jinja2" %}
{% block body %}
    <article class="entry-body">
        <p>id: {{ entry.id }} <a href="https://twitter.com/share" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script></p>
        <p class="entry-title">{{ entry.title }} {{ entry.creation_date }}</p>
    </article>
    <article class="entry-body">
        <p>{{ entry.body }}</p>
        <form method="POST">
            <button type="submit">Edit Journal Entry</button> 
        </form>
    </article>
{% endblock %}
